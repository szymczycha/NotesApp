<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    android:background="@color/main_gray">
    <ImageView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/new_folder_item_image"/>
    <ImageView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cross_icon"
        android:id="@+id/new_folder_item_delete_button"/>
    <ImageView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pen_icon"
        android:id="@+id/new_folder_item_edit_button"/>
    <ImageView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/question_mark_icon"
        android:id="@+id/new_folder_item_info_button"/>
</LinearLayout>